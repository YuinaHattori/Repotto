<div class="container">
    <h1>ログイン</h1>
    <%= form_tag("/login") do %>
        <p>メールアドレス</p>
        <input name="email" value="<%= @email %>">
        <p>パスワード</p>
        <input type="password" name="password" value="<%= @password %>">
        <input type="submit" value="ログインする" class="btn login">
    <% end %>
    <%= link_to("新規ユーザー登録はこちら", "/signup") %>
</div>