<div class="user-left">
    <img src="<%= "/user_images/#{@user.image_name}" %>">
</div>
<div class="user-right">
    <%= @user.name %>
</div>

<% if @user.id == @current_user.id %>
    <div class="btn new-user">
        <%= link_to("ユーザー情報を編集する", "/users/#{@user.id}/edit") %>
    </div>
<% end %>