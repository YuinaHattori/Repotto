<body class="bg-light">
    <div class="container">
        <div class="py-5 text-center">
            <h2>ユーザー詳細</h2>
        </div>
    </div>
    <div class="container countainer-mdiv.container-m my-3 p-3 bg-white rounded border border-secondary">
        <div class="row">
            <div class="col-md-2  img-hidden">
                <img class="img-responsive img-circle reviews" src="<%= "/user_images/#{@user.image_name}" %>">
            </div>
            <div class="col-md-8">
                <p class="h3"><%=@user.name%></p>
                <p><%=@user.email%></p>
                <% if @user.id == @current_user.id %>
                    <%= link_to("ユーザー情報を編集する", "/users/#{@user.id}/edit") %>
                <% end %>
            </div>
        </div>
    </div>
    <div class="py-5 text-center">
        <%= link_to("ユーザー一覧に戻る", "/users/index") %>
    </div>
</body>