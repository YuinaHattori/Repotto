<body class="bg-light">
    <div class="container">
        <div class="py-5 text-center">
            <h2>新規登録</h2>
        </div>
    </div>
    <%= form_tag("/lists/create") do%>
        <div class="col-md-8 order-md-1 container">
            <div class="mb-3">
                <label for="title">期限</label>
                <div class="input-group">
                    <input type="date" class="form-control" name="date" >
                </div>
            </div>

            <div class="mb-3">
                <label for="title">内容</label>
                <div class="input-group">
                    <textarea type="text" class="form-control" placeholder="ToDoList" name="content"></textarea>
                </div>
            </div>
            <button class="btn btn-primary btn-lg btn-block" type="submit">登録する</button>
        </div>
    <% end %>
    <div class="py-5 text-center">
        <%= link_to("一覧に戻る", "/lists/index") %>
    </div>
</body>